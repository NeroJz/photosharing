<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Photoshare</title>

    <!-- Bootstrap core CSS -->
    {% block stylesheets %}
        <link href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/layout.css') }}" rel="stylesheet">
    {% endblock %}

</head>

<body>

<div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills pull-right">
                <li role="presentation" {% if(home is defined) %} class="active" {% endif %}>
                    <a href="{{ path('photo_home') }}">Home</a></li>
                <li role="presentation" {% if(dashboard is defined) %} class="active" {% endif %}>
                    <a href="{{ path('dashboard') }}">Dashboard</a>
                </li>
                <li role="presentation" {% if(signin is defined) %} class="active" {% endif %}>
                    <a href="{{ path('login_page') }}">Sign In</a>
                </li>
            </ul>
        </nav>
        <h3 class="text-muted">Photoshare</h3>
    </div>

    <div class="row marketing">
        {% block body %}


        {% endblock %}
    </div>

    <footer class="footer navbar-fixed-bottom">
        <p>&copy; 2016 Company, Inc.</p>
    </footer>

</div>
<!-- /container -->


{% block javascripts %}
    <script src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
